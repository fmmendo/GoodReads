            <ContentPresenter x:Name="topAppBar"
                                  VerticalAlignment="Stretch"
                                  Grid.Column="3"
                                  HorizontalAlignment="Right"
                                  Content="{Binding Content.TopBarContent, ElementName=RootFrame}"
                                  VerticalContentAlignment="Stretch">
            </ContentPresenter>
            <Button x:Name="btnSearch"
                   Background="{StaticResource GoodReadsBrown}"
                   Grid.Column="2"
                   Click="{x:Bind ViewModel.SearchClick}"
                   Foreground="{ThemeResource ApplicationPageBackgroundThemeBrush}" 
                   MinWidth="48" Height="48"
                   VerticalAlignment="Stretch" HorizontalContentAlignment="Center"   
                   Style="{StaticResource ChromelessButtonStyle}">
                <FontIcon FontFamily="{StaticResource SymbolThemeFontFamily}" Glyph="&#xE094;"/>
            </Button>

        </Grid>

        <Grid x:Name="ContentRoot" Grid.Row="1">
            <SplitView x:Name="splitView"
                       CompactPaneLength="48"
                       OpenPaneLength="220"
                       DisplayMode="Overlay"
                       IsPaneOpen="{x:Bind ViewModel.IsPaneOpen, Mode=TwoWay}">
                <SplitView.Pane>
                    <Grid Background="{StaticResource DarkGray}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <StackPanel>
                            <controls:SplitViewItem x:Name="svHome" GroupName="Sidebar" IsChecked="{x:Bind ViewModel.IsHomeChecked, Mode=TwoWay}" Click="{x:Bind ViewModel.HomeClick}" Text="Home" Icon="&#xE10F;"/>
                            <controls:SplitViewItem x:Name="svBooks" GroupName="Sidebar" IsChecked="{x:Bind ViewModel.IsMyBooksChecked, Mode=TwoWay}" Click="{x:Bind ViewModel.MyBooksClick}" Text="My Books" Icon="&#xE1D3;"/>
                            <!--<controls:SplitViewItem Text="Groups" GroupName="Sidebar" Icon="&#xE72D;"/>-->
                            <!--<controls:SplitViewItem Text="Recomendations" GroupName="Sidebar" Icon="&#xE1CE;"/>-->
                            <controls:SplitViewItem x:Name="svFriends" GroupName="Sidebar" IsChecked="{x:Bind ViewModel.IsFriendsChecked, Mode=TwoWay}" Click="{x:Bind ViewModel.FriendsClick}" Text="Friends" Icon="&#xE716;"/>
                            <!--<controls:SplitViewItem Text="Reading Challenge" GroupName="Sidebar" Icon="&#xE82D;"/>-->
                        </StackPanel>
                        <StackPanel VerticalAlignment="Bottom" Padding="0,0,0,24">
                            <controls:SplitViewItem x:Name="svProfile" GroupName="Sidebar" IsChecked="{x:Bind ViewModel.IsProfileChecked, Mode=TwoWay}" Click="{x:Bind ViewModel.ProfileClick}" Text="Profile" Icon="&#xE13D;"/>
                            <controls:SplitViewItem x:Name="svSettings" GroupName="Sidebar" IsChecked="{x:Bind ViewModel.IsSettingsChecked, Mode=TwoWay}" Click="{x:Bind ViewModel.SettingsClick}" Text="Settings" Icon="&#xE115;"/>
                        </StackPanel>
                    </Grid>
                </SplitView.Pane>

                <Grid Background="#1C1C1C">
                    <Frame x:Name="RootFrame" x:FieldModifier="Public" Loaded="RootFrame_Loaded"/>
                </Grid>
            </SplitView>
        </Grid>
    </Grid>
</UserControl>
